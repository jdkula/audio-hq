{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "format", "lint"]
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
        },
        "dev": {
            "dependsOn": ["^dev"]
        },
        "start": {
            "dependsOn": ["^start"]
        }
    }
}
