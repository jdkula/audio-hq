{
    "compilerOptions": {
        "target": "es2019",
        "sourceMap": true,
        "lib": ["esnext"],
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"]
        },
        "preserveSymlinks": true,
    },
    "include": ["next-env.d.ts", "src/*.ts", "src/**/*.js"],
    "exclude": ["node_modules"]
}
